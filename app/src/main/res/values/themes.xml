<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotePad" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NotePad.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Style for action bar overlay -->
    <style name="Theme.NotePad.ActionBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <!-- Customize color of toolbar title -->
        <item name="android:textColorPrimary">@color/colorSecondary</item>
        <!-- Customize color of navigation drawer and popup icons -->
        <item name="colorControlNormal">@color/colorSecondary</item>
    </style>

    <!-- Style for input box -->
    <style name="Theme.NotePad.InputLayoutStyleOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@drawable/input_layout_outline_box</item>
    </style>

</resources>